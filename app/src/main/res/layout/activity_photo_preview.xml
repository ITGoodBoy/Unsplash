<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/m_scale_imv_photo_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/m_ac_imv_set_wallpapers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/m_scale_imv_photo_preview"
            android:layout_alignEnd="@+id/m_scale_imv_photo_preview"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_img_set_wallpapers" />


    </RelativeLayout>



</ScrollView>
